<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/FPLastName"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:hint="LastName"
        app:layout_constraintStart_toEndOf="@+id/FPprofile_image"
        app:layout_constraintTop_toBottomOf="@+id/FPFirstName" />

    <ImageView
        android:id="@+id/FPprofile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/FPFirstName"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="88dp"
        android:hint="FirstName"
        app:layout_constraintStart_toEndOf="@+id/FPprofile_image"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/FPbioField"
        android:layout_width="274dp"
        android:layout_height="156dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="300dp"
        android:background="@color/lightGrey"
        android:ems="10"
        android:hint="User Bio Goes here..."
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="2000"
        android:maxLines="8"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/FPInterest"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:hint="interests"
        app:layout_constraintStart_toEndOf="@+id/FPprofile_image"
        app:layout_constraintTop_toBottomOf="@+id/FPLastName" />
</androidx.constraintlayout.widget.ConstraintLayout>