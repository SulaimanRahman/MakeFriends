<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/file_sent_parent_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sent_file_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="11:40"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sent_file_body" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sent_file_body"
        android:layout_width="320dp"
        android:layout_height="244dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/message_right_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        app:srcCompat="@android:drawable/stat_sys_download"
        app:strokeColor="@android:color/holo_blue_bright"
        app:strokeWidth="5dp" />


    <ImageView
        android:id="@+id/download_background_transparent"
        android:layout_width="320dp"
        android:layout_height="35dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sent_file_body"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/sent_file_body"
        app:srcCompat="@drawable/file_name_background_transparent_style" />

    <TextView
        android:id="@+id/download_textview"
        android:layout_width="250dp"
        android:layout_height="17dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Download Name"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/download_button"
        app:layout_constraintEnd_toEndOf="@+id/download_background_transparent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/download_button"
        app:layout_constraintTop_toTopOf="@+id/download_button"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/file_size_textview"
        android:layout_width="56dp"
        android:layout_height="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        android:text="size"
        android:textColor="@color/white"
        android:textSize="7sp"
        app:layout_constraintBottom_toBottomOf="@+id/download_background_transparent"
        app:layout_constraintEnd_toEndOf="@+id/download_background_transparent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/download_button"
        app:layout_constraintTop_toBottomOf="@+id/download_textview"
        app:layout_constraintVertical_bias="0.125" />

    <ImageButton
        android:id="@+id/download_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/download_background_transparent"
        app:srcCompat="@android:drawable/stat_sys_download" />


    <ImageView
        android:id="@+id/media_player_icon"
        android:layout_width="61dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/download_background_transparent"
        app:layout_constraintEnd_toEndOf="@+id/sent_file_body"
        app:layout_constraintStart_toStartOf="@+id/sent_file_body"
        app:layout_constraintTop_toTopOf="@+id/sent_file_body"
        app:srcCompat="@android:drawable/ic_media_play" />
</androidx.constraintlayout.widget.ConstraintLayout>