<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGrey"
            android:fontFamily="@font/montserrat"
            android:text=" Notifications"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/icon_badge_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="App icon badge"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notification" />

        <TextView
            android:id="@+id/sys_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="System notifications"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_badge_text" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/badgeToggleSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notification" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/systemNotificationToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/badgeToggleSwitch" />

        <TextView
            android:id="@+id/privacy_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/lightGrey"
            android:fontFamily="@font/montserrat"
            android:text=" Privacy"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sys_notif"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/enable_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Enable location"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/privacy_text"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/location_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/privacy_text"
            android:layout_marginTop="7dp"/>

        <TextView
            android:id="@+id/privacy_location_permission_text"
            android:lines="4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="App uses your location to find other users within a 5 mile radius.  This is considered a similarity between users. App will never reveal your location."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enable_location_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/secure_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGrey"
            android:fontFamily="@font/montserrat"
            android:text=" Security"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/privacy_location_permission_text"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/password_change_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Password change"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/secure_text1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/old_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/montserrat"
            android:text="Old"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_change_text"
            android:layout_marginTop="10dp"
            app:layout_goneMarginLeft="10dp"/>

        <TextView
            android:id="@+id/new_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="New"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/old_text"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/old_password_et"
            android:layout_width="223dp"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_bubble"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:inputType="textPassword"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/systemNotificationToggle"
            app:layout_constraintHorizontal_bias="0.816"
            app:layout_constraintStart_toEndOf="@+id/old_text"
            app:layout_constraintTop_toBottomOf="@+id/password_change_text" />

        <EditText
            android:id="@+id/new_password_et"
            android:layout_width="223dp"
            android:layout_height="27dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_bubble"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:inputType="textPassword"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.809"
            app:layout_constraintStart_toEndOf="@+id/new_text"
            app:layout_constraintTop_toBottomOf="@+id/old_password_et" />

        <Button
            android:id="@+id/save_password_btn"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:background="#373737"
            android:fontFamily="@font/montserrat"
            android:text="Save"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_password_et"
            android:layout_marginRight="90dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/deactivate_account_btn"
            android:layout_width="174dp"
            android:layout_height="33dp"
            android:layout_alignParentLeft="true"
            android:background="#373737"
            android:fontFamily="@font/montserrat"
            android:text="Deactivate account"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/save_password_btn"
            android:layout_marginTop="90dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>












