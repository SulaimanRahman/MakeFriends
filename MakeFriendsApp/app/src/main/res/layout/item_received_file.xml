<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/file_received_parent_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/file_received_profile_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/file_received_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:text="John Doe"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/file_received_profile_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/received_file_body"
        android:layout_width="273dp"
        android:layout_height="221dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/message_left_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/file_received_time"
        app:layout_constraintStart_toEndOf="@+id/file_received_profile_avatar"
        app:layout_constraintTop_toBottomOf="@+id/file_received_name"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        app:srcCompat="@android:drawable/stat_sys_download"
        app:strokeColor="@android:color/holo_orange_light"
        app:strokeWidth="5dp" />

    <TextView
        android:id="@+id/file_received_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="11:40"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/download_background_transparent_for_received_file"
        android:layout_width="273dp"
        android:layout_height="38dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/received_file_body"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/received_file_body"
        app:srcCompat="@drawable/file_name_background_transparent_style" />

    <ImageButton
        android:id="@+id/download_button_for_received_file"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/download_background_transparent_for_received_file"
        app:srcCompat="@android:drawable/stat_sys_download" />

    <TextView
        android:id="@+id/download_textview_for_received_file"
        android:layout_width="212dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Download Name"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/download_button_for_received_file"
        app:layout_constraintEnd_toEndOf="@+id/download_background_transparent_for_received_file"
        app:layout_constraintStart_toEndOf="@+id/download_button_for_received_file"
        app:layout_constraintTop_toTopOf="@+id/download_button_for_received_file"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/file_size_textview_for_received_file"
        android:layout_width="146dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        android:text="size"
        android:textColor="@color/white"
        android:textSize="7sp"
        app:layout_constraintBottom_toBottomOf="@+id/received_file_body"
        app:layout_constraintEnd_toEndOf="@+id/download_background_transparent_for_received_file"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/download_button_for_received_file"
        app:layout_constraintTop_toBottomOf="@+id/download_textview_for_received_file"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/media_player_icon_for_received_file"
        android:layout_width="61dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/received_file_body"
        app:layout_constraintEnd_toEndOf="@+id/received_file_body"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/received_file_body"
        app:layout_constraintTop_toTopOf="@+id/received_file_body"
        app:layout_constraintVertical_bias="0.418"
        app:srcCompat="@android:drawable/ic_media_play" />

</androidx.constraintlayout.widget.ConstraintLayout>