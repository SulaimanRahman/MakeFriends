<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".select_interests">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="415dp"
        android:layout_height="87dp"
        android:layout_marginTop="4dp"
        android:background="#FF5C5A"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Select Interests"
        android:textColor="#373737"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/intText1"
        android:layout_width="322dp"
        android:layout_height="81dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"

        android:layout_marginTop="120dp"
        android:fontFamily="@font/montserrat"
        android:lines="4"
        android:text="MakeFriends finds fellow Matadors for you to meet based on similar interests.  The more interests you select, the more potential friends you may be linked up with."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/intText2"
        android:layout_width="319dp"
        android:layout_height="65dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"

        android:layout_marginTop="208dp"
        android:fontFamily="@font/montserrat"
        android:lines="4"
        android:text="You can explore and add more interests later, but for now, choose at least 3 topics of interest to get started."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchBar1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="292dp"
        android:background="@drawable/input_bubble"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:drawableTint="@color/grey"
        android:hint="Search interests/hobbies"
        android:inputType="textPersonName"
        android:lines="1"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="2dp"
        android:paddingEnd="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="2dp"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <Button
        android:id="@+id/intSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="288dp"
        android:layout_marginLeft="288dp"
        android:layout_marginTop="632dp"
        android:background="@color/colorPrimaryDark"
        android:text="Skip"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>